<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Dubs Bad Hygiene</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="TinyTweaks.PatchOperationCheckModSetting">
                    <settingsType>TinyTweaks.TinyTweaksSettings</settingsType>
                    <settingName>nerfFixtureBeauty</settingName>
                </li>

                <!-- Increase beauty penalty of pit latrines from 5 to 8 -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="PitLatrine"]/statBases/Beauty</xpath>
                    <value>
                        <Beauty>-8</Beauty>
                    </value>
                </li>

                <!-- Increase beauty penalty of water tubs from 5 to 8 -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="WashBucket"]/statBases/Beauty</xpath>
                    <value>
                        <Beauty>-8</Beauty>
                    </value>
                </li>

                <!-- Increase beauty penalty of litter boxes from 5 to 8 -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="LitterBox"]/statBases/Beauty</xpath>
                    <value>
                        <Beauty>-8</Beauty>
                    </value>
                </li>

                <!-- Adds a beauty penalty of 40 (same as fecal sludge) to burn pits -->
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="BurnPit"]/statBases</xpath>
                    <value>
                        <Beauty>-40</Beauty>
                    </value>
                </li>

                <!-- Reduce beauty bonus of sinks from 10 to 0 -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DubsDirtyBasinBase"]/statBases/Beauty</xpath>
                    <value>
                        <Beauty>0</Beauty>
                    </value>
                </li>

                <!-- Reduce beauty bonus of toilets from 1 to 0 -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DubsDirtyTerletBase"]/statBases/Beauty</xpath>
                    <value>
                        <Beauty>0</Beauty>
                    </value>
                </li>

                <!-- Reduce beauty bonus of smart toilets from 4 to 0 -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="AdvTerletBase"]/statBases/Beauty</xpath>
                    <value>
                        <Beauty>0</Beauty>
                    </value>
                </li>

                <!-- Reduce beauty bonus of bathtubs from 10 to 0 -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DubsDirtyBathtubBase"]/statBases/Beauty</xpath>
                    <value>
                        <Beauty>0</Beauty>
                    </value>
                </li>

                <!-- Reduce beauty bonus of showers from 3 to 0 -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[@Name="DubsDirtyShowerBase"]/statBases/Beauty</xpath>
                    <value>
                        <Beauty>0</Beauty>
                    </value>
                </li>

                <!-- Reduce beauty bonus of power showers from 8 to 0 -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="ShowerAdvStuff"]/statBases/Beauty</xpath>
                    <value>
                        <Beauty>0</Beauty>
                    </value>
                </li>

                <!-- Reduce beauty bonus of power showers from 8 to 0 -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="ShowerAdvStuff"]/statBases/Beauty</xpath>
                    <value>
                        <Beauty>0</Beauty>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>