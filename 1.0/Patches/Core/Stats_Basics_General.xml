<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Shooting Accuracy (Turret) -->
    <Operation Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
            <li Class="PatchOperationTest">
                <xpath>/Defs/StatDef[defName="ShootingAccuracyTurret"]/parts</xpath>
                <success>Invert</success>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/StatDef[defName="ShootingAccuracyTurret"]</xpath>
                <value>
                    <parts/>
                </value>
            </li>
        </operations>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/StatDef[defName="ShootingAccuracyTurret"]/parts</xpath>
        <value>
            <li Class="TinyTweaks.StatPart_MannedReplace">
                <priority>100</priority>
                <manningPawnStat>ShootingAccuracyPawn</manningPawnStat>
                <zeroIfUnmanned>true</zeroIfUnmanned>
            </li>
        </value>
    </Operation>

</Patch>